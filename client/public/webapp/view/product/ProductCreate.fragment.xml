<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

    <Dialog title="{i18n>addProduct}">
		<content>
	    	<form:SimpleForm id="objectForm">
		    	<form:content>
		    		<Label text="{i18n>id}"/>
		    		<Input id="ipID" type="Number" maxLength="10"/>

		    		<Label text="{i18n>productName}"/>
		    		<Input id="ipName" maxLength="20"/>

		    		<Label text="{i18n>supplier}"/>
		    		<Input id="ipSupplier" tmaxLength="100"/>

		    		<Label text="{i18n>price}"/>
		    		<Input id="ipPrice" maxLength="100"/>           

		    		<Label text="{i18n>unitsOnOrder}"/>
		    		<Input id="ipUnitsOnOrder" maxLength="100"/>           

		    		<Label text="{i18n>unitsInStock}"/>
		    		<Input id="ipUnitsInStock" maxLength="100"/>                    
		    	</form:content>
	   		</form:SimpleForm>  
		</content> 
		<beginButton>
			<Button text="{i18n>save}" press="onSaveAddProductDialog"/>
		</beginButton> 		
		<endButton>
			<Button text="{i18n>cancel}" press="onCloseAddProductDialog"/>		
		</endButton>
    </Dialog>

</core:FragmentDefinition>